{% model "posts.json" %}
{% block content %} 
  {% for post in model.posts %}
  {% if post.category == mixture.route.slug %}
    <article>
            <h3><a href="post/{{post.id}}">{{post.title}}</a></h3>
            <h6>Written by <a href="#">{{post.author}}</a> on {{post.date}}</h6>
     
            <div class="row">
              <div class="large-6 columns">
                {{post.introtext}}
              </div>
              <div class="large-6 columns">
                <img src="/assets/img/{{post.image}}"/>
              </div>
            </div>
  </article>
          <hr/>
    {% endif %}
  {% endfor %}
{% endblock %}